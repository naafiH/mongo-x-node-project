<!-- views/admin/editproduct.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- ... (head elements) ... -->
    <link rel="stylesheet" href="/css/editproduct.css">
    <title>Edit Product</title>
</head>
<body>

<div class="container">
    <h1>Edit Product</h1>
    <form action="/admin/editproduct/<%= product._id %>" method="post" enctype="multipart/form-data">
        <label for="productName">Product Name:</label>
        <input type="text" id="productName" name="productName" value="<%= product.productName %>" required>

        <label for="productDescription">Product Description:</label>
        <textarea id="productDescription" name="productDescription" required><%= product.productDescription %></textarea>

        <label for="productPrice">Price:</label>
        <input type="number" id="productPrice" name="productPrice" value="<%= product.productPrice %>" required>

        <!-- Add other fields as needed -->

        <button type="submit">Update Product</button>
    </form>
    <a href="admin/adminpage">go to admin page</a>
</div>

</body>
</html>
